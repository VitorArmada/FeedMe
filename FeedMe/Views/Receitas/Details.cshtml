        <div id="comentario" class="form-inline">
                <input class="CommentInput" maxlength="300" placeholder="Escreva o seu comentário"/>
                <button id="SubmitComment" class="btn btn-success">Enviar Comentário</button>
            <p id="reportError"></p>
	    </div> 
        }
        <hr />

        
    
	</div>

