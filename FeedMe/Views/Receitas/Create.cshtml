@model FeedMe.Models.Receita

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
     <div class="container">
        <div class="well editar_receita_form">
                <div class="row-fluid">
                <legend>Criar Receita</legend>
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">Titulo</label>
                        <div class="controls">
                            <div class="input-prepend">
                                @Html.EditorFor(model => model.Titulo)
                                @Html.ValidationMessageFor(model => model.Titulo)
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Descrição</label>
                        <div class="controls">
                            <div class="input-prepend">
                                @Html.EditorFor(model => model.Descricao)
                                @Html.ValidationMessageFor(model => model.Descricao)
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Duração (Minutos)</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Duracao)
                            @Html.ValidationMessageFor(model => model.Duracao)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Custo</label>
                        <div class="controls">
                             @Html.DropDownList("CustoId", String.Empty)
                             @Html.ValidationMessageFor(model => model.Custo)
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="control-group">
                        <label class="control-label">Tipo</label>
                        <div class="controls">
                             @Html.DropDownList("TipoId", String.Empty)
                             @Html.ValidationMessageFor(model => model.TipoId)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Dificuldade</label>
                        <div class="controls">
                             @Html.DropDownList("DificuldadeId", String.Empty)
                             @Html.ValidationMessageFor(model => model.DificuldadeId)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Origem</label>
                        <div class="controls">
                             @Html.DropDownList("OrigemId", String.Empty)
                            @Html.ValidationMessageFor(model => model.OrigemId)
                        </div>
                    </div>   
                    <div class="control-group">
                        <label class="control-label">Número de Pessoas</label>
                        <div class="controls">
                             @Html.EditorFor(model => model.NumeroPessoas)
                             @Html.ValidationMessageFor(model => model.NumeroPessoas)
                        </div>
                    </div>   
                </div>    
            </div>
                <div class="control-group" style="padding-left: 20px;">
                        <label class="control-label"></label>
                        <div class="controls">
                            <button type="submit" class="btn btn-success">Confirmar e Definir Ingredientes</button>
                        </div>
                    </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
