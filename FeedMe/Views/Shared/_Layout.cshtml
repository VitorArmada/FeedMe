<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Feed.Me</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/select2")
        @Styles.Render("~/Content/bootstrap")
        @Scripts.Render("~/bundles/special")
        @Styles.Render("~/Content/select2")
        @RenderSection("scripts", required: false)
    </head>
    <body style="background-color:white">
      <div id="topnav">
        <div class="container">
        <ul class="nav nav-pills pull-left">
            <li><div><a href="@Url.Content("~")"><img src="~/Content/img/logo_min2.png" /></a></div></li>
        </ul>
        <ul class="nav nav-pills pull-right">
            @if (User.Identity.IsAuthenticated && !(FeedMe.Models.DatabaseContext.isAdminStatic(User.Identity.Name)))
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Receitas<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="~/Receitas/Create">Criar Receita</a></li>
						<li><a href="~/Utilizadores/Details/@FeedMe.Models.DatabaseContext.getByName(User.Identity.Name).UtilizadorId">Ver as Minhas Receitas</a></li>
                    </ul>
                </li>
            }
            @Html.Partial("_LoginPartial")
        </ul>
        
        </div>
      </div>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </body>
</html>

